{
	"name": "sidetabs",
	"version": "1.0.0",
	"description": "A Firefox extension that shows vertical tabs in the sidebar.",
	"workspaces": [
		"packages/parcel-transformer-svgtopng"
	],
	"scripts": {
		"watch": "parcel watch ./src/manifest.json --no-hmr --target webext-dev --dist-dir ./extension",
		"devbuild": "NODE_ENV=development parcel build ./src/manifest.json --target webext-dev --dist-dir ./extension",
		"build": "rm -rf ./Sidetabs_Prod && parcel build ./src/manifest.json --target webext-prod --dist-dir ./Sidetabs_Prod",
		"run": "web-ext run --source-dir ./extension --keep-profile-changes --firefox-profile=./.ff_profile",
		"dev": "npm run devbuild; concurrently \"npm run watch\" \"npm run run\""
	},
	"type": "module",
	"browserslist": [
		"Firefox >= 90"
	],
	"targets": {
		"webext-dev": {
			"sourceMap": {
				"inline": true,
				"inlineSources": true
			}
		},
		"webext-prod": {
			"sourceMap": false,
			"context": "browser",
			"outputFormat": "global"
		}
	},
	"webExt": {
		"sourceDir": "extension"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeb5/SideTabs.git"
	},
	"author": "jeb5",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/jeb5/SideTabs/issues"
	},
	"homepage": "https://github.com/jeb5/SideTabs#readme",
	"devDependencies": {
		"@parcel/config-webextension": "^2.2.1",
		"@parcel/transformer-svg-react": "^2.2.1",
		"@types/color": "^3.0.2",
		"@types/md5": "^2.3.1",
		"@types/react-dom": "^17.0.11",
		"@types/webextension-polyfill": "^0.8.2",
		"concurrently": "^7.0.0",
		"parcel": "^2.2.1",
		"parcel-transformer-svgtopng": "file:packages/parcel-transformer-svgtopng",
		"typescript": "^4.5.2",
		"web-ext": "^6.5.0"
	},
	"dependencies": {
		"@dnd-kit/core": "^5.0.1",
		"@dnd-kit/modifiers": "^5.0.0",
		"@dnd-kit/sortable": "^6.0.0",
		"@dnd-kit/utilities": "^3.1.0",
		"color": "^4.0.1",
		"md5": "^2.3.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"webextension-polyfill": "^0.8.0"
	}
}
