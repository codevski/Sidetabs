{
	"manifest_version": 2,
	"name": "Sidetabs",
	"version": "0.1",
	"sidebar_action": {
		"default_icon": {
			"16": "assets/app_icons/icon16.png",
			"32": "assets/app_icons/icon32.png",
			"64": "assets/app_icons/icon64.png"
		},
		"default_title": "Sidetabs",
		"default_panel": "sidebar/sidebar.html"
	},
	"permissions": [
		"tabs",
		"menus",
		"menus.overrideContext",
		"bookmarks",
		"sessions",
		"cookies",
		"contextualIdentities",
		"theme"
	],
	"web_accessible_resources": ["assets/icons/*", "assets/*"],
	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "MacCtrl+R"
			}
		}
	}
}
